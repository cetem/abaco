<% if @operators.empty? %>
  <%= render 'shared/empty_index' %>
<% else %>
  <div class="readonly-data">
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= t('view.operators.full_name') %></th>
          <th><%= t('view.operators.charge') %></th>
        </tr>
      </thead>

      <tbody>
        <% @operators.each do |o| %>
          <tr>
            <td><%= link_to o, operator_path(o) %></td>
            <td><%= @admin_operators.include?(o.id) ? t('view.operators.administrator') : t('view.operators.operator') %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<nav class="form-actions">
  <%= link_to t('view.operators.re_import'), import_operators_path, method: :patch, class: 'btn btn-primary pull-right' %>
</nav>
